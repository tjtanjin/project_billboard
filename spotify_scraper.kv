#:kivy 1.10.1

ScreenManagement:
    LoginPage:
        id: login_page
        name: "login_page"
    UserPage:
        id: user_page
        name: "user_page"
    ProgressPage:
        id: progress_page
        name: "progress_page"
    SettingsPage:
        id: settings_page
        name: "settings_page"
<LoginPage>:
    FloatLayout:
        size: root.width, root.height
        center: root.width / 2, root.height / 2
        padding: 10
        spacing: 10
        Label:
            id: m3guitest_label
            text: 'Spotify Scraper'
            pos_hint: {'x':0, 'y':0.2}
            font_size: self.height * 0.1
        Label:
            id: username_label
            text: 'User Name:'
            pos_hint: {'x':-0.10, 'y':0.05}
            font_size: self.height * 0.025
        TextInput:
            id: username
            multiline: False
            focus: True
            write_tab: False
            size_hint: (0.15, 0.05)
            pos_hint: {'x':0.47, 'y':0.525}
            font_size: root.height * 0.0275
        Label:
            id: password_label
            text: 'Password:'
            pos_hint: {'x':-0.10, 'y':0}
            font_size: self.height * 0.025
        TextInput:
            id: password
            multiline: False
            focus: True
            write_tab: False
            password: True
            size_hint: (0.15, 0.05)
            pos_hint: {'x':0.47, 'y':0.475}
            font_size: root.height * 0.0275
        Label:
            id: successlogin_message
            text: "Login successful"
            color: [0.5,1,0,1]
            pos_hint: {'x':-0.005, 'y':-0.045}
            opacity: 0
            font_size: self.height * 0.025
        Label:
            id: errorlogin_message
            text: "Incorrect username or password."
            color: [1,0,0,1]
            pos_hint: {'x':-0.005, 'y':-0.045}
            opacity: 0
            font_size: self.height * 0.025
        Button:
            id: login_button
            text: "Login"
            size_hint: (0.15, 0.05)
            pos_hint: {'x':0.42, 'y':0.38}
            background_normal: ""
            background_color: 0.5, 0.5, 0.5, 1
            on_press: login_button.background_color=1, 1, 1, 1
            on_release: login_button.background_color=0.5, 0.5, 0.5, 1
            on_release: root.verify_credentials()
            font_size: self.height * 0.5
        Button:
            id: quit_button
            text: "Quit"
            size_hint: (0.15, 0.05)
            pos_hint: {'x':0.42, 'y':0.32}
            background_normal: ""
            background_color: 0.5, 0.5, 0.5, 1
            on_press: quit_button.background_color=1, 1, 1, 1
            on_release: quit_button.background_color=0.5, 0.5, 0.5, 1
            on_release: root.quit()
            font_size: self.height * 0.5
