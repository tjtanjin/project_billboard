<ProgressPage>:
    on_enter:
        root.track_progress()
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        FloatLayout:
            size_hint: 1, 0.95
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: '{}: {}/{} songs analyzed'.format(pb.task, pb.value, pb.max)
                size_hint_y: None
                pos_hint: {'x':0, 'y':0.3}
                height: '48dp'
            ProgressBar:
                id: pb
                task: ""
                size_hint_x: 0.5
                size_hint_y: None
                pos_hint: {'x':0.25, 'y':0.5}
                height: '48dp'
                value: 0
    FloatLayout:
        size_hint: 1, 0.05
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: back_button
            text: "Back"
            size_hint: (0.15, 1)
            pos_hint: {'x':0.425, 'y':0}
            background_normal: ""
            background_color: 0.5, 0.5, 0.5, 1
            on_press: back_button.background_color=1, 1, 1, 1
            on_release: back_button.background_color=0.5, 0.5, 0.5, 1
            on_release: root.back()
            font_size: self.height * 0.5
